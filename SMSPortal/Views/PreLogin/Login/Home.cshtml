@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>The B2B Project</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

    <link href="~/Content/landingpage/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/landingpage/fonts/font-awesome-4.6.3/css/font-awesome.css" rel="stylesheet" />
</head>
<body>
    <div class="main_bg">
        <div class="main_bg_info">
            <div class="container-fluid">
                <div class="header">
                    <img src="~/Content/landingpage/images/Jpg-2.jpg" />
                </div>

                <div class="row" style="padding: 5px 0 40px 0;">
                    <div class="col-md-8">
                        <label class="control-label label_1">Does your business have the right connections for growth?</label>
                        <label class="control-label label_2">We believe in making your B2B</label><br />
                        <label class="control-label label_2">experience a heart 2 heart connection.</label><br />
                        <label class="control-label label_2">Connect with the right business and</label><br />
                        <label class="control-label label_2">experience a luxurious, customised B2B.</label>
                    </div>
                    <form id="frmLogin" action="@Url.Action("Authenticate", "Login")" method="post">
                        <div class="col-md-4">
                            <div class="login_form">
                                <i class="fa fa-home" aria-hidden="true"></i>

                                <div class="icon-addon addon-md form-group">
                                    <input type="text" name="Cookies.User_Name" class="form-control" placeholder="User ID" id="userid" required="required" />
                                    <label for="userid" class="fa fa-user" rel="tooltip" title="userid"></label>
                                </div>

                                <div class="icon-addon addon-md form-group">
                                    <input type="password" name="Cookies.Password" class="form-control" placeholder="Password" id="pwd" required="required" />
                                    <label for="pwd" class="fa fa-lock" rel="tooltip" title="pwd"></label>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn_b2blogin">Login</button>
                                </div>
                                <div class="form-group">
                                    <a href="@Url.Action("ForgotPassword", "Login")" class="btn btn_fp btn-link">Forgot Password?</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <!--<ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>-->
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <div class="row">
                                <div class="col-md-1 col-sm-1 col-xs-1">
                                    <a href="@Url.Action("Marsedes", "Login")" class="mercedes_logo_a"><img src="~/Content/landingpage/images/mercedes.png" class="mercedes_logo" /></a>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <a href="@Url.Action("Renault", "Login")"><img src="~/Content/landingpage/images/renault.png" class="renault_logo" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/Content/landingpage/js/bootstrap.min.js"></script>
</body>
</html>
