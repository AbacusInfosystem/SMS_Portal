@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="UTF-8">

    <title>Forgot Password</title>

    <link href="~/Content/AdminLTE/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />

    <link href="Content/AdminLTE/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="content-wrapper">

    <form id="frmForgotPassword" method="post">
        <section class="content">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" name="User_Name" id="txtUserName" class="form-control input-sm" placeholder="Username" />
                                    <div class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <button type="submit" id="btnLogin" class="btn btn-primary btn-block btn-flat">Send Email</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <script>
        $(function () {

            $("#frmForgotPassword").validate({

                rules: {

                    "UserName": { required: true },
                },
                messages: {

                    "Username": { required: "Username is required field." },
                }
            });

        });


    </script>

</body>

</html>
