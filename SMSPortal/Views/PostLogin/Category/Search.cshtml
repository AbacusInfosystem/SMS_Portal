@model SMSPortal.Models.PostLogin.CategoryViewModel
@using SMSPortalInfo.Common;

<script src="~/Scripts/Module/Category/search_category_events.js"></script>
<script src="~/Scripts/Module/Category/search_category_methods.js"></script>
<form id="frmCategory" enctype="multipart/form-data">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        @{Html.RenderPartial("_ServerMessage");}
        <section class="content-header">
            <h1>
                Category Master
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="#"><i class="fa fa-dashboard"></i>Admin</a></li>
                <li class="active">Category</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Category</h3>
                        </div>
                        <div class="box-body">
                            <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                            <input type="hidden" id="hdnCategory_Id" name="Category.Category_Id" value="@Model.Category.Category_Id">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group auto-complete">
                                        <label for="Category" class="lookup-title">Category Name</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control input-sm autocomplete-text" name="Filter.Category_Name" id="txtCategory_Name" placeholder="Enter Category Name" value="@Model.Filter.Category_Name" data-table="category" data-col="Category_Id,Category_Name" data-headernames="Category">
                                            <input type="hidden" id="hdnCategoryId" value="@Model.Filter.Category_Id" name="Filter.Category_Id" class="auto-complete-value" />
                                            <input type="hidden" id="hdnCategoryName" value="@Model.Filter.Category_Name" name="Filter.Category_Name" class="auto-complete-label" />
                                            <div class="input-group-addon">
                                                <a href="#" class="text-muted" id="hrefCategory" role="button"><i class="fa fa-server"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                @*<div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Category Name</label>
                                        <input type="text" class="form-control input-sm" name="Filter.Category_Name" id="txtCategory_Name" placeholder="Enter category name" value="" maxlength="20">
                                    </div>
                                </div>*@
                            </div>
                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="btn-group pull-left">
                                            <a class="btn btn-primary btn-sm" role="button" id="btnCreate" href="@Url.Action("Index", "Category")">Create </a>
                                            <a class="btn btn-warning btn-sm" id="btnSearch" role="button">Search </a>
                                        </div>
                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnEdit" class="btn btn-warning btn-sm" style="display:none;">Edit </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblCategory">
                                <tr id="subhead">
                                    <th></th>
                                    <th>Category Name</th>
                                    <th>Status</th>
                                </tr>
                            </table>
                        </div>
                        <div class="box-footer clearfix">
                            <div class="pagination pagination-sm no-margin pull-right">
                                <ul></ul>
                            </div>
                            <div id="divSearchGridOverlay" class="overlay">
                                <i class="fa fa-refresh fa-spin"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content-wrapper -->
</form>

