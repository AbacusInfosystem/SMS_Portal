<form id="frmReceivable" enctype="multipart/form-data">

    <input type="hidden" id="hdnInvoice_Id" value="@Model.Receivable.Invoice_Id" name="Receivable.Invoice_Id" />

    <input type="hidden" id="hdnInvoice_Amount" value="@Model.Receivable.Invoice_Amount" name="Receivable.Invoice_Amount" />

    <input type="hidden" id="hdnEntityId" value="@Model.Filter.Entity_Id" name="Filter.Entity_Id" />

    <input type="hidden" id="hdnRoleId" value="@Model.Filter.Role_Id" name="Filter.Role_Id" />

    <input type="hidden" id="hdnMode" value="@Model.Filter.Mode" name="Filter.Mode" />

    <div class="payables">
        <div class="container">
            <h3 class="payables_header">Payable</h3>

            <div class="row" style="margin: 20px 0;">
                <div class="col-md-2" style="text-align: right;">
                    <div class="form-group">
                        <label class="control-label label_mer">Invoice No.</label>
                    </div>
                </div>
                <div class="col-md-5">

                    <div class="form-group auto-complete">
                        <div class="input-group">
                            @if (Model.Filter.Role_Id == 2)
                            {
                                <input type="text" class="form-control form_control_mer autocomplete-text" name="Receivable.Invoice_Id" id="txtDealerInvoice" placeholder="Enter Invoice No" value="@(Model.Filter.Invoice_Id == 0 ? "" : Model.Filter.Invoice_Id.ToString())" data-param="hdnEntityId" data-field="Dealer_Id" data-table="Invoice" data-col="Invoice_Id,Invoice_No" data-headernames="Invoice No">
                            }
                            else if (Model.Filter.Role_Id == 3)
                            {
                                <input type="text" class="form-control form_control_mer autocomplete-text" name="Receivable.Invoice_Id" id="txtDealerInvoice" placeholder="Enter Invoice No" value="@(Model.Filter.Invoice_Id == 0 ? "" : Model.Filter.Invoice_Id.ToString())" data-param="hdnEntityId" data-field="Brand_Id" data-table="Invoice" data-col="Invoice_Id,Invoice_No" data-headernames="Invoice No">
                            }

                            <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-server" style="color:#fff;" aria-hidden="true"></i></a></span>

                            <input type="hidden" id="hdnInvoiceId" value="@Model.Filter.Invoice_Id" name="Receivable.Invoice_Id" class="auto-complete-value" />

                            <input type="hidden" id="hdnInvoiceNo" value="@Model.Filter.Invoice_No" name="Receivable.Invoice_No" class="auto-complete-label" />
                            </div>
                        </div>



                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="btn-group pull-left">
                        <a class="btn btn_mer ripple" id="btnSearch" role="button">Search</a>
                    </div>
                    <div class="btn-group pull-right">
                        <button type="button" id="btnView" style="display:none;" class="btn btn_mer ripple">View</button>
                        <button type="button" id="btnViewInvoice" style="display:none;" class="btn btn_mer ripple">View Invoice</button>
                    </div>
                </div>
            </div>

            <div class="table-responsive" style="margin: 50px 0;">
                <table class="table table-bordered" id="tblReceivableMaster">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Invoice No</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="box-footer clearfix">
                    <div class="pagination pagination-sm no-margin pull-right">
                        <ul></ul>
                    </div>
                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
            </div>



        </div>
    </div>
</form>
