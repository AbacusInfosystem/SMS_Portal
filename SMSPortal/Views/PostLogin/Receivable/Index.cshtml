@model SMSPortal.Models.PostLogin.ReceivableViewModel
@using SMSPortalInfo.Common

<script src="~/Scripts/Module/Receivable/Receviable_events.js"></script>
<script src="~/Scripts/Module/Receivable/Receivable_methods.js"></script>
<script src="~/Scripts/Module/Receivable/receivable_validation.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        $('.iradio-list').iCheck({
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

    });
</script>


<div class="content-wrapper">
    @*@{Html.RenderPartial("_ServerMessage");}*@
    <section class="content-header">
        <h1>
            Receivable Master
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Admin</li>

            <li class="active">Receivable</li>

        </ol>
    </section>

    <form id="frmReceivableMaster">
        <input type="hidden" id="hdnReceivable_Id" value="@Model.Receivable.Receivable_Id" name="Receivable.Receivable_Id" />
        <input type="hidden" id="hdnReceivable_Item_Id" value="" name="" />

        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">

                        <div class="box-header with-border">
                            <i class="fa fa-chevron-left" style="margin-right: 5px; cursor: pointer;font-size:22px; "></i>
                            <h3 class="box-title">Receivable </h3>
                        </div>

                        <div class="box-body">

                            <div id="dvInvoice" class="row">
                                <div class="col-md-3">
                                    <div class="form-group auto-complete">
                                        <label for="InvoiceNo" class="lookup-title">Invoice No</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control input-sm autocomplete-text lookup-text" name="Receivable.Invoice_No" id="txtInvoiceNo" placeholder="Enter Invoice No" value="@(Model.Receivable.Invoice_Id == 0 ? "" : Model.Receivable.Invoice_Id.ToString())" data-table="Invoice" data-col="Invoice_Id,Invoice_No" data-headernames="Invoice No">
                                            <input type="hidden" id="hdnInvoiceId" value="@Model.Receivable.Invoice_Id" name="Receivable.Invoice_Id" class="auto-complete-value" />
                                            <input type="hidden" id="hdnInvoiceNo" value="@Model.Receivable.Invoice_No" name="Receivable.Invoice_No" class="auto-complete-label" />
                                            <div class="input-group-addon">
                                                <a href="#" class="text-muted lookup-btn" id="hrefInvoice" role="button"><i class="fa fa-server"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label style="color: #333">Total Amount</label>
                                        <input type="text" class="form-control input-sm" name="Receivable.Invoice_Amount" id="txtInvoice_Amount" placeholder="Enter Invoice Amount" value="@Model.Receivable.Invoice_Amount" maxlength="20">
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label style="color: #333">Balance Amount</label>
                                        <input type="text" class="form-control input-sm" name="Receivable.Invoice_Amount" id="txtBalance_Amount" placeholder="Enter Invoice Amount" value="@Model.Receivable.Balance_Amount" maxlength="20">
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="txtRecDate" style="color: #333">Receivable Date</label>
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="form-control  input-sm" id="txtRecDate" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask name="Receivable.Receivable_Date" placeholder="Enter Receivable Date" value="@((Model.Receivable.Receivable_Date == DateTime.MinValue ? "" : Model.Receivable.Receivable_Date.ToString("dd-MM-yyyy")))" />
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Transaction Type</label>
                                        <select id="drpTransaction" class="form-control" name="">
                                            <option value="">-Select Transaction Type-</option>
                                            @foreach (var item in LookupInfo.Get_Transaction_Types())
                                            {
                                                if (Model.Receivable.Transaction_Type == item.Key)
                                                {
                                                    <option value="@item.Key" selected="selected">@item.Value</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Key">@item.Value</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div id="dvMain">

                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <br />
                                    <div class="btn-group">
                                        <button type="button" id="btnNEFTSave" class="btn btn-success btn-sm">Save</button>
                                        <button type="reset" id="btnReset" class="btn btn-warning btn-sm">Reset</button>
                                    </div>

                                </div>
                            </div>
                            
                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnEdit" style="display:none;" class="btn btn-warning btn-sm">Edit </button>
                                            <button type="button" id="btnDelete" style="display:none;" class="btn btn-warning btn-sm">Delete </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblReceivableItems">
                                <tr id="subhead">
                                                                       
                                    <th>Transaction Type</th>
                                    <th>Amount</th>
                                    <th>Bank Name</th>
                                    <th>IFSC Code</th>
                                    <th>Cheque No</th>
                                    <th>Cheque Date</th>
                                    <th>NEFT Details</th>
                                    <th>Credit/Debit Card Details</th>
                                    <th>Receivable Date</th> 
                                    <th>Action</th>                                   
                                </tr>

                                @if (Model.Receivables != null && Model.Receivables.Count() > 0)
                                {
                                    int i = 1;
                                    foreach (var itm in Model.Receivables)
                                    {
                                        <tr id="tr(@itm.Receivable_Item_Id)">
                                            <td>
                                                <span id="trBankName@(itm.Receivable_Item_Id)"> @itm.Transaction_Type_Name</span>
                                                <input type="hidden" id="hdnTransaction_Type@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Bank_Name" value="@itm.Transaction_Type">
                                                <input type="hidden" id="hdnReceivable_Item_Id@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Bank_Name" value="@itm.Receivable_Item_Id">
                                                <input type="hidden" id="hdnReceivable_Id@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Bank_Name" value="@itm.Receivable_Id">
                                            </td>
                                            <td>
                                                <span id="trAccount_No@(itm.Receivable_Item_Id)"> @itm.Receivable_Item_Amount</span>
                                                <input type="hidden" id="hdnReceivable_Item_Amount@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Account_No" value="@itm.Receivable_Item_Amount">
                                            </td>
                                            <td>
                                                <span id="trIfsc_Code@(itm.Receivable_Item_Id)"> @itm.Bank_Name</span>
                                                <input type="hidden" id="hdnBank_Name@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Ifsc_Code" value="@itm.Bank_Name">
                                            </td>
                                            <td>
                                                <span id="trBankName@(itm.Receivable_Item_Id)"> @itm.IFSC_Code</span>
                                                <input type="hidden" id="hdnIFSC_Code@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Bank_Name" value="@itm.IFSC_Code">
                                            </td>
                                            <td>
                                                <span id="trAccount_No@(itm.Receivable_Item_Id)"> @itm.Cheque_Number</span>
                                                <input type="hidden" id="hdnCheque_Number@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Account_No" value="@itm.Cheque_Number">
                                            </td>
                                            <td>
                                                <span id="trIfsc_Code@(itm.Receivable_Item_Id)"> @itm.Cheque_Date.ToString("MM/dd/yyyy")</span>
                                                <input type="hidden" id="hdnCheque_Date@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Ifsc_Code" value="@itm.Cheque_Date.ToString("MM/dd/yyyy")">
                                            </td>
                                            <td>
                                                <span id="trAccount_No@(itm.Receivable_Item_Id)"> @itm.NEFT</span>
                                                <input type="hidden" id="hdnNEFT@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Account_No" value="@itm.NEFT">
                                            </td>
                                            <td>
                                                <span id="trIfsc_Code@(itm.Receivable_Item_Id)"> @itm.Credit_Debit_Card</span>
                                                <input type="hidden" id="hdnCredit_Debit_Card@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Ifsc_Code" value="@itm.Credit_Debit_Card">
                                            </td>
                                            <td>
                                                <span id="trIfsc_Code@(itm.Receivable_Item_Id)"> @itm.Receivable_Date.ToString("MM/dd/yyyy")</span>
                                                <input type="hidden" id="hdnReceivable_Date@(itm.Receivable_Item_Id)" name="Vendor.BankDetailsList[@(i-1)].Ifsc_Code" value="@itm.Receivable_Date.ToString("MM/dd/yyyy")">
                                            </td>
                                            <td>
                                                <button type="button" id="edit-bank-details" class="btn btn-box-tool btn-tel-edit" onclick="javascript:EditReceivableData(@itm.Receivable_Item_Id)"><i class='fa fa-pencil'></i></button>
                                                <button type="button" id="delete-bank-details" class="btn btn-box-tool btn-tel-delete" onclick="javascript:DeletReceivableData(@itm.Receivable_Item_Id)"><i class='fa fa-times'></i></button>
                                            </td>
                                        </tr>
                                                i = i + 1;
                                    }
                                }

                            </table>
                        </div>
                        <div class="box-footer clearfix">
                            <div class="pagination pagination-sm no-margin pull-right">
                                <ul></ul>
                            </div>
                            @*<div id="divSearchGridOverlay" class="overlay">
                                <i class="fa fa-refresh fa-spin"></i>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>


