    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label style="color: #333">Amount</label>
                <input type="text" class="form-control input-sm" name="Receivable.Receivable_Item_Amount" id="txtReceivable_Item_Amount" placeholder="Enter IFSC Code" value="@Model.Receivable.Receivable_Item_Amount" maxlength="20">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label style="color: #333">NEFT</label>
                <input type="text" class="form-control input-sm" name="Receivable.NEFT" id="txtNEFT" placeholder="Enter NEFT Details" value="@Model.Receivable.NEFT" maxlength="20">
            </div>
        </div>
    </div>

   

</div>

<div class="box-body" style="display:none" id="divCredit_Debit">

    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label style="color: #333">Amount</label>
                <input type="text" class="form-control input-sm" name="Receivable.Receivable_Item_Amount" id="txtReceivable_Item_Amount2" placeholder="Enter IFSC Code" value="@Model.Receivable.Receivable_Item_Amount" maxlength="20">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label style="color: #333">Credit/Debit Card</label>
                <input type="text" class="form-control input-sm" name="Receivable.Credit_Debit_Card" id="txtCredit_Debit" placeholder="Enter Credit Debit Card Details" value="@Model.Receivable.Credit_Debit_Card" maxlength="20">
            </div>
        </div>
    </div>
</div>