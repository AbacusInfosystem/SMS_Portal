    <div class="row">

        <div class="col-md-3">
            <div class="form-group">
                <label style="color: #333">Amount</label>
                <input type="text" class="form-control input-sm" name="Receivable.Receivable_Item_Amount" id="txtReceivable_Item_Amount1" placeholder="Enter IFSC Code" value="@(Model.Receivable.Receivable_Item_Amount==0 ? "":Model.Receivable.Receivable_Item_Amount.ToString())">
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-3">
            <div class="form-group">
                <label for="txtRecDate" style="color: #333">Cheque Date</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="form-control  input-sm" id="txtChequeDate" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask name="Receivable.Cheque_Date" placeholder="Enter Cheque Date" value="@Model.Receivable.Cheque_Date" />

                </div>
