@model SMSPortal.Models.PostLogin.ReceivableViewModel

@using SMSPortalInfo.Common

<script src="~/Scripts/Module/Receivable/search_receivable_event.js"></script>

<script src="~/Scripts/Module/Receivable/search_receivable_method.js"></script>


<form id="frmReceivable">

    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage">
    <input type="hidden" id="hdnInvoice_Id" value="@Model.Receivable.Invoice_Id" name="Receivable.Invoice_Id" />
    <input type="hidden" id="hdnInvoice_Amount" value="@Model.Receivable.Invoice_Amount" name="Receivable.Invoice_Amount" />

    <div class="dealer_master">

        <div class="container">
            @{Html.RenderPartial("_ServerMessage");}
            <h3 class="dealer_master_header">
                Receivable Master
            </h3>

            <div class="row" style="margin: 20px 0;">
                <div class="col-md-6">

                    <div class="form-group auto-complete">

                        <label for="InvoiceNo" class="control-label label_mer">Invoice No</label>

                        <div class="input-group">

                            <input type="text" class="form-control form_control_mer autocomplete-text" name="Receivable.Invoice_No" id="txtInvoiceNo" placeholder="Enter Invoice No" value="@(Model.Filter.Invoice_Id == 0 ? "" : Model.Filter.Invoice_Id.ToString())" data-table="Invoice" data-field="Entity_Id" data-col="Invoice_Id,Invoice_No" data-headernames="Invoice No">
                            <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-server" style="color:#fff;" aria-hidden="true"></i></a></span>
                            <input type="hidden" id="hdnInvoiceId" value="@Model.Filter.Invoice_Id" name="Receivable.Invoice_Id" class="auto-complete-value" />
                            <input type="hidden" id="hdnInvoiceNo" value="@Model.Filter.Invoice_No" name="Receivable.Invoice_No" class="auto-complete-label" />

                        </div>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="btn-group">
                        <br />
                        <a class="btn btn_mer ripple" style="margin-top: 5px;" id="btnSearch" role="button">Search </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @*<div class="btn-group pull-left">

                        <a class="btn btn_mer ripple" id="btnSearch" role="button">Search</a>

                    </div>*@
                    <div class="btn-group pull-right">

                        <button type="button" id="btnEdit" style="display:none;" class="btn btn_mer ripple">Edit</button>
                        <input type="hidden" id="hdnMode" value="@Model.Filter.Mode" name="Filter.Mode" />

                    </div>
                </div>
            </div>

            <div class="table-responsive" style="margin: 50px 0;">
                <table class="table table-bordered" id="tblReceivableMaster">
                    <thead>
                        <tr id="subhead">

                            <th width="5%"></th>
                            <th width="10%">Invoice No</th>
                            <th width="10%">Amount</th>
                            <th>Status</th>

                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="clearfix">
                    <div class="pagination no-margin pull-right">
                        <ul class="pagination"></ul>
                    </div>
                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
            </div>

        </div>

    </div>

</form>






