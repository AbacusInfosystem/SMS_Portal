@model SMSPortal.Models.PostLogin.BrandViewModel
@using SMSPortalInfo.Common

<script src="~/Scripts/Module/Brand/update_brand_profile_methods.js"></script>
<script src="~/Scripts/Module/Brand/update_brand_profile_events.js"></script>
<script src="~/Scripts/Module/Brand/brand_profile_validation.js"></script>

<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <section class="content-header">
        <h1>
            Brand Profile
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Profile</li>

            <li class="active">Profile Details</li>

        </ol>
    </section>
    <form id="frmUpdateBrandProfile">
        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-body">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <input type="hidden" class="form-control input-sm" name="Brand.Brand_Id" id="hdf_BrandId" placeholder="Country Name" value="@Model.Brand.Brand_Id">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label style="color: #333">Brand Name</label>
                                                    <input type="text" class="form-control input-sm" name="Brand.Brand_Name" id="txtBrand_Name" placeholder="Enter brand name" value="@Model.Brand.Brand_Name" maxlength="20">
                                                    <input type="hidden" id="hdnBrandName" value="@Model.Brand.Brand_Name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @*<label style="color: #333">brand c</label>
                                                    <input type="hidden" id="hdnBrand_Category" value="@Model.Brand.Brand_Category">*@
                                                    <label style="color:#333">Braand Category :</label>
                                                    <label style="color: #333;font-size:12px" value="@Model.Brand.Brand_Category_Name">@Model.Brand.Brand_Category_Name</label>
                                                    <input type="hidden" id="hdnBrand_Category" name="Brand.Brand_Category" value="@Model.Brand.Brand_Category">

                                                    @*<select disabled id="drpBrand_Category" class="form-control" name="Brand.Brand_Category">
                                                        <option value="">-Select Brand Category-</option>
                                                        @foreach (var item in LookupInfo.Get_Brand_Categories())
                                                        {
                                                            if (Model.Brand.Brand_Category == item.Key)
                                                            {
                                                                <option value="@item.Key" selected="selected">@item.Value</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.Key">@item.Value</option>
                                                            }
                                                        }
                                                    </select>*@

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label style="color: #333">Website Url</label>
                                                    <input type="text" class="form-control input-sm" name="Brand.Website_Url" id="txtWebsite_Name" placeholder="Enter website url" value="@Model.Brand.Website_Url" maxlength="40">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="btn-group pull-left">
                                                <button type="button" id="btnUpdate" class="btn btn-warning btn-sm">Update</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>