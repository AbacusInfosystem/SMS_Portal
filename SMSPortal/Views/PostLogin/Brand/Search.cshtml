@model SMSPortal.Models.PostLogin.BrandViewModel
@using SMSPortal.Common;
<script src="~/Scripts/Module/Brand/search_brand_events.js"></script>
<script src="~/Scripts/Module/Brand/search_brand_methods.js"></script>
<script src="~/Scripts/additional-methods.min.js"></script>
 
<form id="frmBrand" enctype="multipart/form-data">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        @{Html.RenderPartial("_ServerMessage");} 
        <section class="content-header">
            <h1>
                Brand Master
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="#"><i class="fa fa-dashboard"></i>Admin</a></li>
                <li class="active">Brand</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Brand</h3>
                        </div>
                        <div class="box-body">
                            <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                            <input type="hidden" id="hdnBrand_Id" name="Brand.Brand_Id" value="@Model.Brand.Brand_Id">
                            <input type="hidden" id="hdnBrand_Logo" name="Brand.Brand_Logo" value="@Model.Brand.Brand_Logo">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="color: #333">Brand Name</label>
                                        <input type="text" class="form-control input-sm" name="Filter.Brand_Name" id="txtBrand_Name" placeholder="Enter brand name" value="" >
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="btn-group pull-left">
                                            <a class="btn btn-primary btn-sm" role="button" id="btnCreate" href="@Url.Action("AddEdit_Brand", "Brand")">Create </a>
                                            <a class="btn btn-warning btn-sm" id="btnSearch" role="button">Search </a>
                                        </div>
                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnEdit" style="display:none;" class="btn btn-warning btn-sm">Edit </button>
                                            <button type="button" id="btnUploadLogo" style="display:none;" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#div_Parent_Modal_Fade">Upload Brand Logo</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblBrandMaster">
                                <tr id="subhead">
                                    <th></th>
                                    <th>Brand Name</th>
                                    <th>Brand Category</th>
                                    <th>Status</th>
                                </tr>                                 
                            </table>
                        </div>
                        <div class="box-footer clearfix">
                                <div class="pagination pagination-sm no-margin pull-right">
                                    <ul></ul>
                                </div>
                                <div id="divSearchGridOverlay" class="overlay">
                                    <i class="fa fa-refresh fa-spin"></i>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content-wrapper -->
</form>

