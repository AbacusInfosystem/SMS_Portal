@model SMSPortal.Models.PostLogin.BrandViewModel
@using SMSPortalInfo.Common

<script src="~/Scripts/Module/Brand/brand_profile_events.js"></script>
<script src="~/Scripts/Module/Brand/brand_profile_methods.js"></script>

<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <section class="content-header">
        <h1>
            Brand Profile
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Profile</li>

            <li class="active">Profile Details</li>

        </ol>
    </section>
    <form id="frmBrandProfileMaster">
        <input type="hidden" id="hdnBrand_Id" name="Brand.Brand_Id" value="@Model.Brand.Brand_Id" />
        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-body">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Brand Name :</label>
                                                    <label style="font-size:12px">@Model.Brand.Brand_Name</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    
                                                    @foreach (var item in LookupInfo.Get_Brand_Categories())
                                                    {
                                                        if (Model.Brand.Brand_Category == item.Key)
                                                        {
                                                            <label>Brand Category :@item.Value</label>
                                                        }
                                                    }
                                                    <input type="hidden" id="hdnBrand_Category" name="Brand.Brand_Category" value="@Model.Brand.Brand_Category">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <label>Web Site :</label>
                                                    <label style="font-size:12px">@Model.Brand.Website_Url</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="btn-group pull-left">
                                                <button type="button" id="btnEdit" class="btn btn-warning btn-sm">Edit</button>                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>