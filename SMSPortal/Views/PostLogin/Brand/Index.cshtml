<script src="~/Scripts/Module/Brand/brand_events.js"></script>
<div class="content-wrapper">
    @*@{Html.RenderPartial("_ServerMessage");}*@
    <section class="content-header">
        <h1>
            Brand Master
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">Admin</li>
            <li class="active">Brand</li>
        </ol>
    </section>
    <form id="frmBrandMaster">
        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-header with-border">
                            <i class="fa fa-chevron-left" style="margin-right: 5px; cursor: pointer;font-size:22px; "></i>
                            <h3 class="box-title">Brand</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Brand Name</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtBrand_Name" placeholder="Enter brand name" value="" maxlength="20">
                                    </div>
                                </div>                          
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Brand Category</label>
                                        <select id="drpBrand_Category" class="form-control" name="">
                                            <option value="">-Select Brand Category-</option>
                                        </select>
                                    </div>
                                </div>
                            </div> 
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Brand Website Url</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtwebsiteUrl" placeholder="Enter brand website" value="" maxlength="20">
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <label>
                                        <input type="checkbox" name="chkStatus" checked="checked" />
                                        &nbsp;&nbsp;&nbsp;&nbsp; Active
                                    </label>
                                </div>                                
                            </div>
                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>                                    
                                    <button type="reset" id="btnReset" class="btn btn-warning btn-sm">Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>