@model SMSPortal.Models.PostLogin.SalesOrderViewModel
@using SMSPortalInfo.Common


<script src="~/Scripts/Module/SalesOrder/search_sales_order_methods.js"></script>
<script src="~/Scripts/Module/SalesOrder/search_sales_order_events.js"></script>


<form id="frmSalesOrder">

    <input type="hidden" id="hdnOrder_Id" name="Sales_Order.Vendor_Order_Id" value="@Model.Sales_Order.Vendor_Order_Id">
    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage">

    <div class="dealer_master">

        <div class="container">
            @{Html.RenderPartial("_ServerMessage");}
            <h3 class="dealer_master_header">
                Sales Orders
            </h3>

            <div class="row" style="margin: 20px 0;">
                <div class="col-md-3">
                    <div class="form-group auto-complete">
                        <label class="control-label label_mer">Order No</label>
                        <div class="input-group">
                            <input type="text" class="form-control form_control_mer autocomplete-text" name="Filter.Order_No" id="txtSalesOrderNo" placeholder="Enter Order No" value="@Model.Filter.Order_No" data-table="Orders" data-col="Order_Id,Order_No" data-headernames="Orders">
                            <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-server" style="color:#fff;" aria-hidden="true"></i></a></span>
                            <input type="hidden" id="hdnOrderId" value="@Model.Filter.Order_Id" name="Filter.Order_Id" class="auto-complete-value" />
                            <input type="hidden" id="hdnOrderNo" value="@Model.Filter.Order_No" name="Filter.Order_No" class="auto-complete-label" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">

                    <label class="control-label label_mer">Status</label>
                    <input type="hidden" id="hdnStatus" value="@Model.Filter.Status" name="Filter.Status" />
                    <select id="drpOrderStatus" class="form-control form_control_mer" name="Filter.Status">
                        <option value="">-Select Status-</option>
                        @foreach (var item in LookupInfo.Get_Order_Status())
                        {
                            if (Model.Filter.Status == item.Key)
                            {
                                <option value="@item.Key" selected="selected">@item.Value</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        }
                    </select>

                </div>

                <div class="col-md-3">
                    <div class="btn-group">
                        <br />
                        <a class="btn btn_mer ripple" id="btnSearch" role="button">Search </a>
                    </div>
                </div>
                @*<div class="col-md-6">
                    <input type="hidden" id="hdnOrderSlot" value="@Model.Filter.OrderSlot" name="Filter.OrderSlot" />
                    <br />
                    <div class="input-group">
                        <a class="btn btn_mer ripple" id="btnFirstSlot" role="button">First Slot </a>&nbsp;
                        <a class="btn btn_mer ripple" id="btnSecondSlot" role="button">Second Slot </a>
                    </div>
                </div>
                <div class="col-md-3">
                    <br />
                    <div class="input-group">

                    </div>
                </div>
                <div class="col-md-3">

                </div>*@
            </div>

            <div class="row">
                <div class="col-md-12">
                    @*<div class="btn-group pull-left">

                        <a class="btn btn_mer ripple" id="btnSearch" role="button">Search </a>

                    </div>*@
                    <div class="btn-group pull-right">

                        <button type="button" id="btnOrderDetails" style="display:none;" class="btn btn_mer ripple">Order Details</button>

                    </div>
                </div>
            </div>

            <div class="table-responsive" style="margin: 50px 0;">
                <table class="table table-bordered" id="tblSalesOrder">
                    <thead>
                        <tr id="subhead">
                            <th width="5%"></th>
                            <th width="10%">Order No</th>
                            <th width="10%">Date</th>
                            <th width="15%">Dealer Name</th>
                            <th width="10%">Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="clearfix">
                    <div class="pagination no-margin pull-right">
                        <ul class="pagination"></ul>
                    </div>
                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
            </div>

        </div>

    </div>

</form>
