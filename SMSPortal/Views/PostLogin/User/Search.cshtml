@model SMSPortal.Models.PostLogin.UserViewModel
@using SMSPortalInfo.Common;
<script type="text/javascript">

    $(document).ready(function () {

        $('.iradio-list').iCheck({
            radioClass: 'iradio_square-green',
            increaseArea: '20%' // optional
        });

    });
</script>
<script src="~/Scripts/Module/User/search_user_event.js"></script>
<form id="frmUser" enctype="multipart/form-data">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        @*@{Html.RenderPartial("_ServerMessage");}*@
        <section class="content-header">
            <h1>
                User Master
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="#"><i class="fa fa-dashboard"></i>Admin</a></li>
                <li class="active">User</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">User</h3>
                        </div>
                        <div class="box-body">
                            <input type="hidden" id="hdnUser_Id" name="User.User_Id">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="color: #333">User Name</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtUser_Name" placeholder="Enter user name" value="" maxlength="20">
                                    </div>
                                </div>

                            </div>

                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="btn-group pull-left">
                                            <a class="btn btn-primary btn-sm" role="button" href="@Url.Action("Index", "user")">Create </a>
                                            <a class="btn btn-warning btn-sm" id="btnSearch" role="button">Search </a>
                                        </div>

                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnEdit" class="btn btn-warning btn-sm" style="display:none;">Edit </button>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblUserMaster">
                                <tr id="subhead">
                                    <th></th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Contact</th>
                                    <th>Status</th>
                                </tr>                                                          
                                @if (Model.Users != null && Model.Users.Count > 0)
                                {
                                    foreach (var item in Model.Users)
                                    {
                                        <tr id="subhead">
                                            <td><input type="radio" id="rdo_@item.User_Id" name="User" class="iradio-list" /></td>
                                            <td>@item.First_Name</td>
                                            <td>@item.Last_Name</td>
                                            <td>@item.Contact_No_1</td>
                                            <td>@item.Is_Active</td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        @*<div class="box-footer clearfix">
                                <div class="pagination pagination-sm no-margin pull-right">
                                    <ul></ul>
                                </div>
                                <div id="divSearchGridOverlay" class="overlay">
                                    <i class="fa fa-refresh fa-spin"></i>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content-wrapper -->
</form>

