@model SMSPortal.Models.PostLogin.UserViewModel
@using SMSPortalInfo.Common;
<script src="~/Scripts/Module/User/search_user_event.js"></script>
<script src="~/Scripts/Module/User/search_user_method.js"></script>

<form id="frmUser">

    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
    <input type="hidden" id="hdnUser_Id" name="User.User_Id" value="@Model.User.User_Id">

    <div class="dealer_master">

        <div class="container">
            @{Html.RenderPartial("_ServerMessage");}
            <h3 class="dealer_master_header">
                User Master
            </h3>

            <div class="row" style="margin: 20px 0;">
                <div class="col-md-6">
                    <div class="form-group auto-complete">
                        <label class="control-label label_mer">User Name</label>
                        <div class="input-group">
                            <input type="text" class="form-control form_control_mer autocomplete-text" name="Filter.User_Name" id="txtUser_Name" placeholder="Enter User Name" value="@Model.Filter.User_Name" data-table="Users" data-col="User_Id,User_Name" data-headernames="User">
                            <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-server" style="color:#fff;" aria-hidden="true"></i></a></span>
                            <input type="hidden" id="hdnUserId" value="@Model.Filter.User_Id" name="Filter.User_Id" class="auto-complete-value" />
                            <input type="hidden" id="hdnUserName" value="@Model.Filter.User_Name" name="Filter.User_Name" class="auto-complete-label" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="btn-group">
                        <br />
                        <a class="btn btn_mer ripple" style="margin-top: 5px;" id="btnSearch" role="button">Search </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="btn-group pull-left">

                        <a class="btn btn_mer ripple" role="button" id="btnCreate" href="@Url.Action("Index", "user")">Create </a>
                        @*<a class="btn btn_mer ripple" id="btnSearch" role="button">Search </a>*@

                    </div>
                    <div class="btn-group pull-right">

                        <button type="button" id="btnEdit" style="display:none;" class="btn btn_mer ripple">Edit </button>

                    </div>
                </div>
            </div>

            <div class="table-responsive" style="margin: 50px 0;">
                <table class="table table-bordered" id="tblUser">
                    <thead>
                        <tr>
                            <th width="5%"></th>
                            <th width="20%">User Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="clearfix">
                    <div class="no-margin pull-right">
                        <nav>
                            <ul class="pagination"></ul>
                        </nav>
                    </div>
                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
            </div>

        </div>

    </div>

</form>

