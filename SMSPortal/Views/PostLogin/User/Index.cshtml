<script src="~/Scripts/Module/User/User_events.js"></script>

<div class="content-wrapper">
    @*@{Html.RenderPartial("_ServerMessage");}*@
    <section class="content-header">
        <h1>
            User Master
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Admin</li>

            <li class="active">User</li>

        </ol>
    </section>

    <form id="frmUserMaster">

        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-header with-border">
                            <i class="fa fa-chevron-left" style="margin-right: 5px; cursor: pointer;font-size:22px; "></i>
                            <h3 class="box-title">User </h3>
                        </div>

                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">User Name</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtUser_Name" placeholder="Enter user name" value="" maxlength="20">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">First Name</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtFirst_Name" placeholder="Enter first name" value="" maxlength="20">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Last Name</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtLast_Name" placeholder="Enter last name" value="" maxlength="20">
                                    </div>
                                </div>
                            </div>
                            
                            
                            
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Role</label>
                                        <select id="drpRole" class="form-control" name="">
                                            <option value="">-Select Role-</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Gender</label>
                                        <select id="drpGender" class="form-control" name="">
                                            <option value="">-Select Gender-</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            
                            


                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Contact No 1</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtContactNo1" placeholder="Enter your contact" value="" maxlength="20">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Contact No 2</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtContactNo2" placeholder="Enter your alternative contact" value="" maxlength="20">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Last Login Date</label></br>
                                        <input type="text" class="form-control input-sm" placeholder="Enter last login date" id="txtLastlogin_Date" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">

                                        <label>

                                            <input type="checkbox" name="chkStatus" checked="checked" />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active
                                        </label>
                                    </div>
                                </div>

                            </div>

                            @*<div>
                                    <div class="form-group">
                                        <label>
                                            <input type="checkbox" name="chkStatus" checked="checked" />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active
                                        </label>
                                    </div>
                                </div>*@

                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                    <button type="reset" id="btnReset" class="btn btn-warning btn-sm">Reset</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </form>
</div>