@model SMSPortal.Models.PostLogin.ProductViewModel
@using SMSPortal.Common;

<script src="~/Scripts/Module/Product/search_product_events.js"></script>
<script src="~/Scripts/Module/Product/search_product_methods.js"></script>
<script src="~/Scripts/additional-methods.min.js"></script>

<form id="frmProduct">

    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
    <input type="hidden" id="hdnProduct_Id" name="Product.Product_Id" value="@Model.Product.Product_Id">
    <input type="hidden" id="hdnEntity_Id" name="Cookies.Entity_Id" value="@Model.Cookies.Entity_Id">

    <div class="dealer_master">

        <div class="container">
            @{Html.RenderPartial("_ServerMessage");}
            <h3 class="dealer_master_header">
                Product Master
            </h3>

            <div class="row" style="margin: 20px 0;">
                <div class="col-md-6">
                    <div class="form-group auto-complete">
                        <label class="control-label label_mer">Product Name</label>
                        <div class="input-group">
                            <input type="text" class="form-control form_control_mer autocomplete-text" name="Filter.Product_Name" id="txtProduct_Name" placeholder="Enter Product Name" value="@Model.Filter.Product_Name" data-table="Product" data-param="hdnEntity_Id" data-col="Product_Id,Product_Name" data-headernames="Product">
                            <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-server" style="color:#fff;" aria-hidden="true"></i></a></span>
                            <input type="hidden" id="hdnProductId" value="@Model.Filter.Product_Id" name="Filter.Product_Id" class="auto-complete-value" />
                            <input type="hidden" id="hdnProductName" value="@Model.Filter.Product_Name" name="Filter.Product_Name" class="auto-complete-label" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <br />
                    <div class="btn-group">
                        <a class="btn btn_mer ripple" style="margin-top: 5px;" id="btnSearch" role="button">Search </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="btn-group pull-left">

                        <a class="btn btn_mer ripple" role="button" id="btnCreate" href="@Url.Action("AddEdit_Product", "Product")">Create </a>
                        @*<a class="btn btn_mer ripple" id="btnSearch" role="button">Search </a>*@
                        <button type="button" id="btnUploadProducts" class="btn btn_mer ripple">Upload Products</button>

                    </div>
                    <div class="btn-group pull-right">

                        <button type="button" id="btnEdit" style="display:none;" class="btn btn_mer ripple">Edit </button>
                        <button type="button" id="btnUpload" class="btn btn_mer ripple" style="display:none;" data-toggle="modal" data-target="#div_Parent_Modal_Fade">Upload Product Images</button>

                    </div>
                </div>
            </div>

            <div class="table-responsive" style="margin: 50px 0;">
                <table class="table table-bordered" id="tblProductMaster">
                    <thead>
                        <tr id="subhead">
                            <th width="5%"></th>
                            <th width="20%">Product</th>
                            <th width="10%">Price</th>
                            <th width="15%">Brand</th>
                            <th width="20%">Category</th>
                            <th width="20%">Subcategory</th>
                            <th>Biddable</th>
                            @*<th>Status</th>*@
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="clearfix">
                    <div class="pagination no-margin pull-right">
                        <ul class="pagination"></ul>
                    </div>
                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
            </div>

        </div>

    </div>

</form>

