    <script>
        $(function () {
            $("#frmUploadProductImages").validate({
                errorClass: 'login-error',
                rules: {
                    "ProductImage.File": {
                        required: true,
                        extension: "jpeg|png|jpg|JPEG|PNG|JPG"
                    }
                },
                messages: {
                    "ProductImage.File": {
                        required: "File is required.",
                        extension: "Please upload jpeg/png/jpg file"
                    }
                }
            });

        })
    </script>

</form>