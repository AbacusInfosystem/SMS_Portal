<script src="~/Scripts/Module/Product/Product_events.js"></script>

<div class="content-wrapper">
    @*@{Html.RenderPartial("_ServerMessage");}*@
    <section class="content-header">
        <h1>
            Product Master
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Admin</li>

            <li class="active">Product</li>

        </ol>
    </section>

    <form id="frmProductMaster">

        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-header with-border">
                            <i class="fa fa-chevron-left" style="margin-right: 5px; cursor: pointer;font-size:22px; "></i>
                            <h3 class="box-title">Product</h3>
                        </div>

                        <div class="box-body">

                         
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label style="color: #333">Product Name</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtProduct_Name" placeholder="Enter product name" value="" maxlength="20">
                                        </div>
                                    </div>
                                </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="color: #333">Category</label>
                                        <select id="drpProduct_Category" class="form-control" name="">
                                            <option value="">-Select Category-</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="color: #333">SubCategory</label>
                                        <select id="drpProduct_SubCategory" class="form-control" name="">
                                            <option value="">-Select SubCategory-</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label style="color: #333">Brand</label>
                                            <select id="drpBrand_Category" class="form-control" name="">
                                                <option value="">-Select Brand-</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label style="color: #333">Product Price</label>
                                            <input type="text" class="form-control input-sm" name="" id="txtProduct_Price" placeholder="Enter price of product" value="" maxlength="20">
                                        </div>
                                    </div>
                                </div>



                          

                            <div class="row">


                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="color: #333">Product Description</label>
                                       
                                        <textarea class="form-control" id="txtarea_productdescription"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <br />
                                        <label>

                                            <input type="checkbox" name="chkStatus" checked="checked" />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active
                                        </label>
                                    </div>
                                </div>


                                <div class="col-md-2">
                                    <div class="form-group">
                                        <br />
                                        <label>

                                            <input type="checkbox" name="chkBid" checked="checked" />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Biddable
                                        </label>
                                    </div>
                                </div>
                            </div>

                            @*<div>
                                    <div class="form-group">
                                        <label>
                                            <input type="checkbox" name="chkStatus" checked="checked" />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active
                                        </label>
                                    </div>
                                </div>*@

                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="button" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                    <button type="reset" id="btnReset" class="btn btn-warning btn-sm">Reset</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </form>
</div>
