@model SMSPortal.Models.PostLogin.VendorViewModel

<script src="~/Scripts/Module/ThirdPartyVendor/vendor_bank_details_methods.js"></script>
<script src="~/Scripts/Module/ThirdPartyVendor/vendor_bank_details_events.js"></script>

    <form id="frmBankDetails">
        <input type="hidden" id="hdnVendor_Id" name="Vendor.Vendor_Id" value="@Model.Vendor.Vendor_Id" />
    <div id="dvBankDetailsData" class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3">
                    <div id="dvBankName" class="form-group">
                        <label class="control-label label_mer">Bank Name<small class="required-label"></small></label>
                        <input type="text" maxlength="20" value="" placeholder="Enter Bank name" id="txtBank_Name" name="txtBank_Name" class="form-control form_control_mer custom-mandatory">
                    </div>
                </div>

                <div class="col-md-3">
                    <div id="dvAccountNo" class="form-group">
                        <label class="control-label label_mer">Account No<small class="required-label"></small></label>
                        <input type="text" maxlength="20" value="" placeholder="Enter Account No" id="txtAccount_No" name="txtAccount_No" class="form-control form_control_mer custom-mandatory">
                    </div>
                </div>

                <div class="col-md-3">
                    <div id="dvIfscCode" class="form-group">
                        <label class="control-label label_mer">IFSC Code<small class="required-label"></small></label>
                        <input type="text" maxlength="15" value="" placeholder="Enter IFSC Code" id="txtIFSC_Code" name="txtIFSC_Code" class="form-control form_control_mer custom-mandatory">
                    </div>
                </div>

                <div class="col-md-1">
                    <div class="form-group">
                        <label class="control-label label_mer"> Active</label>
                        <br />
                        <input type="checkbox" class="chkstatus" name="chkStatus" id="chkStatus" />
                    </div>
                    <input type="hidden" id="hdnIsActive" value="">
                </div>

                @*<div class="col-md-1">
                    <label class="control-label label_mer"> Add</label>
                    <br />
                    <button type="button" id="btnAdd" class="btn btn_mer ripple pull-right"><i class="fa fa-plus"></i></button>
                </div>*@

                <div class="col-md-1">
                    <div class="form-group">
                        <br />
                        <button type="button" id="btnAdd" class="btn btn_mer ripple">Add</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <br />
        <div class="col-md-12">
            <div class="table-responsive" style="margin: 50px 0;">
                <input type="hidden" id="hdnIsEditBankDetails" value="false" />
                <input type="hidden" id="hdnRowIdspecific" value="0" />
                <table class="table table-bordered" id="tblBankDetails">
                    <thead>
                        <tr id="subhead">
                            <th>Bank Name</th>
                            <th>Account No.</th>
                            <th>IFSC Code</th>
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @if (Model.Vendor.BankDetailsList != null && Model.Vendor.BankDetailsList.Count() > 0)
                    {
                        int i = 0;
                        foreach (var itm in Model.Vendor.BankDetailsList)
                        {
                            <tr id="tr@(i)">
                                <td>
                                    <span id="trBankName@(i)"> @itm.Bank_Name</span>
                                    <input type="hidden" id="hdnbank_Name@(i)" name="Vendor.BankDetailsList[@i].Bank_Name" value="@itm.Bank_Name">
                                    <input type="hidden" id="hdnVendor_Bank_Detail_Id@(i)" name="Vendor.BankDetailsList[@i].Vendor_Bank_Detail_Id" value="@itm.Vendor_Bank_Detail_Id">
                                </td>
                                <td>
                                    <span id="trAccount_No@(i)"> @itm.Account_No</span>
                                    <input type="hidden" id="hdnaccount_No@(i)" name="Vendor.BankDetailsList[@i].Account_No" value="@itm.Account_No">
                                </td>
                                <td>
                                    <span id="trIfsc_Code@(i)"> @itm.Ifsc_Code</span>
                                    <input type="hidden" id="hdnifsc_Code@(i)" name="Vendor.BankDetailsList[@i].Ifsc_Code" value="@itm.Ifsc_Code">
                                </td>
                                <td>
                                    @if (itm.Status.ToString() == "True")
                                    {
                                        <span id="trStatus@(i)"> Active</span>
                                        <input type="hidden" id="hdnstatus@(i)" name="Vendor.BankDetailsList[@i].Status" value="true">
                                    }
                                    else
                                    {
                                        <span id="trStatus@(i)"> InActive</span>
                                        <input type="hidden" id="hdnstatus@(i)" name="Vendor.BankDetailsList[@i].Status" value="false">
                                    }

                                </td>
                                <td>
                                    <button type="button" id="edit-bank-details" class="btn btn-box-tool btn-tel-edit" onclick="javascript:EditBankDetailsData(@i)"><i class='fa fa-pencil'></i></button>
                                    @*<button type="button" id="delete-bank-details" class="btn btn-box-tool btn-tel-delete" onclick="javascript:DeleteBankDetailsData(@i)"><i class='fa fa-times'></i></button>*@
                                </td>
                            </tr>
                                    i = i + 1;
                        }
                    }
                </table>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="btn-group pull-left">
            <button class="btn btn_mer ripple" id="btnSave" type="button">Save Bank Details</button>
        </div>
    </div>
    </form>
