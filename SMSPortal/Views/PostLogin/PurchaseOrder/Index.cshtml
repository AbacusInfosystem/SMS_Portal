
<script src="~/Scripts/Module/PurchaseOrder/PurchaseOrder_events.js"></script>

<div class="content-wrapper">
    @*@{Html.RenderPartial("_ServerMessage");}*@
    <section class="content-header">
        <h1>
            Purchase Order Master
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Admin</li>

            <li class="active">Purchase Order</li>

        </ol>
    </section>

    <form id="frmPurchaseOrderMaster">

        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-header with-border">
                            <i class="fa fa-chevron-left" style="margin-right: 5px; cursor: pointer;font-size:22px; "></i>
                            <h3 class="box-title">Purchase Order</h3>
                        </div>

                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Purchase Order No</label>
                                        <input type="text" class="form-control input-sm" name="" id="txtPurchaseOrder_Name" placeholder="Enter purchase order no" value="" maxlength="20">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Vendor</label>
                                        <select id="drpVendor" class="form-control" name="">
                                            <option value="">-Select Vendor-</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            
                            

                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                    <button type="reset" id="btnReset" class="btn btn-warning btn-sm">Reset</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </form>
</div>