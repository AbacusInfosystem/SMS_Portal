@model SMSPortal.Models.PostLogin.PurchaseOrderViewModel
@using SMSPortal.Common;

<script src="~/Scripts/Module/PurchaseOrder/search_purchase_order_events.js"></script>
<script src="~/Scripts/Module/PurchaseOrder/search_purchase_order_methods.js"></script>

<form id="frmPurchaseOrder">

    <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
    <input type="hidden" id="hdn_PurchaseOrderId" name="PurchaseOrder.Purchase_Order_Id" value="@Model.PurchaseOrder.Purchase_Order_Id">
    <input type="hidden" id="hdnEntity_Id" name="Cookies.Entity_Id" value="@Model.Cookies.Entity_Id">

    <div class="dealer_master">

        <div class="container">
            @{Html.RenderPartial("_ServerMessage");}
            <h3 class="dealer_master_header">
                Purchase Order Master
            </h3>

            <div class="row" style="margin: 20px 0;">
                <div class="col-md-6">
                    <div class="form-group auto-complete">
                        <label for="Purchase_Order" class="control-label label_mer">Purchase Order</label>
                        <div class="input-group">
                            <input type="text" class="form-control form_control_mer autocomplete-text" name="Filter.Purchase_Order_No" id="txtAdminPurchase_Order_No" placeholder="Enter Order No" value="@Model.Filter.Purchase_Order_No" data-table="Purchase_Order" data-param="hdnEntity_Id" data-col="Purchase_Order_Id,Purchase_Order_No" data-headernames="PurchaseOrder">
                            <span class="input-group-addon"> <a href="#" class="text-muted" id="hrefDealer" role="button"> <i class="fa fa-server" style="color:#fff;" aria-hidden="true"></i></a></span>
                            <input type="hidden" id="hdnPurchaseOrderId" value="@Model.Filter.Purchase_Order_Id" name="Filter.Purchase_Order_Id" class="auto-complete-value" />
                            <input type="hidden" id="hdnPurchaseOrderNo" value="@Model.Filter.Purchase_Order_No" name="Filter.Purchase_Order_No" class="auto-complete-label" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="btn-group">
                        <br />
                        <a class="btn btn_mer ripple" style="margin-top: 5px;" id="btnSearch" role="button">Search </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="btn-group pull-left">

                        <a class="btn btn_mer ripple" role="button" id="btnCreate" href="@Url.Action("AddEdit_Purchase_Order", "PurchaseOrder")">Create </a>
                        @*<a class="btn btn_mer ripple" id="btnSearch" role="button">Search </a>*@

                    </div>
                    <div class="btn-group pull-right">

                        <button type="button" id="btnEdit" style="display:none;" class="btn btn_mer ripple">Edit </button>

                    </div>
                </div>
            </div>

            <div class="table-responsive" style="margin: 50px 0;">
                <table class="table table-bordered" id="tblPurchaseOrder">
                    <thead>
                        <tr id="subhead">
                            <th width="5%"></th>
                            <th width="20%">Purchase Order No</th>
                            <th width="15%">Vendor</th>
                            <th width="10%">Amount</th>
                            <th>Status</th>

                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="clearfix">
                    <div class="pagination no-margin pull-right">
                        <ul class="pagination"></ul>
                    </div>
                    <div id="divSearchGridOverlay" class="overlay">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
            </div>

        </div>

    </div>

</form>






