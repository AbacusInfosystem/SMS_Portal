@model SMSPortal.Models.PostLogin.SubCategoryViewModel
@using SMSPortalInfo.Common


<script src="~/Scripts/Module/SubCategory/subcategory_events.js"></script>
<script src="~/Scripts/Module/SubCategory/subcategory_validation.js"></script>
<script src="~/Scripts/Module/SubCategory/subcategory_methods.js"></script>

<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <section class="content-header">
        <h1>
            SubCategory Master
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">Admin</li>
            <li class="active">SubCategory</li>
        </ol>
    </section>
    <form id="frmSubCategory">
        <input type="hidden" id="hdnSubcategory_Id" name="SubCategory.Subcategory_Id" value="@Model.SubCategory.Subcategory_Id">
        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-header with-border">
                            <i class="fa fa-chevron-left" style="margin-right: 5px; cursor: pointer;font-size:22px; "></i>
                            <h3 class="box-title">SubCategory</h3>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Name</label>
                                        <input type="text" class="form-control input-sm" name="SubCategory.Subcategory_Name" id="txtSubCategory_Name" placeholder="Enter SubCategory" value="@Model.SubCategory.Subcategory_Name" maxlength="30">
                                        <input type="hidden" id="hdnSubCategory_Name" value="@Model.SubCategory.Subcategory_Name">
                                    </div>
                                </div>
                            </div>
                            <div id="dvSubc" class="row">
                                @*<div class="col-md-3">
                                    <div class="form-group">
                                        <label style="color: #333">Category</label>
                                        <select id="drpCategory" class="form-control" name="SubCategory.Category_Id">
                                            <option value="">-Select Category Name-</option>
                                            @foreach (var item in Model.Categories)
                                            {
                                                if (Model.SubCategory.Category_Id == item.Category_Id)
                                                {

                                                    <option value="@item.Category_Id" selected="selected">@item.Category_Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Category_Id">@item.Category_Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>*@
                                <div class="col-md-3">
                                    <div class="form-group auto-complete">
                                        <label for="Subcategory" class="lookup-title">Category Name</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control input-sm autocomplete-text lookup-text" name="SubCategory.Category_Name" id="txtCategory" placeholder="Enter Category Name" value="@(Model.SubCategory.Category_Id == 0 ? "" : Model.SubCategory.Category_Id.ToString())" data-table="Category" data-col="Category_Id,Category_Name" data-headernames="Category Name">
                                            <input type="hidden" id="hdnCategoryId" value="@Model.SubCategory.Category_Id" name="SubCategory.Category_Id" class="auto-complete-value" />
                                            <input type="hidden" id="hdnCategoryName" value="@Model.SubCategory.Category_Name" name="SubCategory.Category_Name" class="auto-complete-label" />
                                            <div class="input-group-addon">
                                                <a href="#" class="text-muted" id="hrefCategory" role="button"><i class="fa fa-search"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    @if (Model.SubCategory.IsActive == false)
                                    {
                                        <label>
                                            <input type="checkbox" class="chkstatus" name="chkStatus" />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active
                                        </label>
                                    }
                                    else
                                    {
                                        <label>
                                            <input type="checkbox" class="chkstatus" name="chkStatus" checked="checked" />
                                            &nbsp;&nbsp;&nbsp;&nbsp; Active
                                        </label>
                                    }
                                </div>
                                <input type="hidden" id="hdnIsActive" name="SubCategory.IsActive" value="@Model.SubCategory.IsActive.ToString()" />
                                </div>
                            </div>
                            <div class="box-footer">
                                <div class="btn-group">
                                    <button type="submit" id="btnSave" class="btn btn-success btn-sm">Save</button>
                                    <button type="reset" id="btnReset" class="btn btn-warning btn-sm">Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>            
        </section>
    </form>
</div>