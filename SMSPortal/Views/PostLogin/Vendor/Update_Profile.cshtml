@model SMSPortal.Models.PostLogin.NewVendorViewModel
@using SMSPortalInfo.Common

<script src="~/Scripts/Module/Vendor/update_vendor_profile_events.js"></script>
<script src="~/Scripts/Module/Vendor/update_vendor_profile_methods.js"></script>
<script src="~/Scripts/Module/Vendor/vendor_profile_validation.js"></script>

<form id="frmUpdateVendorProfile">
    <input type="hidden" id="hdnVendor_Id" name="Vendor.Vendor_Id" value="@Model.Vendor.Vendor_Id" />
    <div class="master">
        <div class="container">
         
            <h3 class="master_header">
                Edit Vendor Profile
                @*<span> <a href="profile.html"><i class="fa fa-angle-left" aria-hidden="true"></i>Back</a> </span>*@
            </h3>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label label_mer">Name </label>
                        <input type="text" id="txtVendor_Name" class="form-control form_control_mer" name="Vendor.Vendor_Name" value="@Model.Vendor.Vendor_Name" />
                    </div>

                    <div class="form-group">
                        <label class="control-label label_mer">Address </label>
                        <input type="text" id="txtAddress" class="form-control form_control_mer" name="Vendor.Address" value="@Model.Vendor.Address" maxlength="20" />
                    </div>

                    <div class="form-group">
                        <label class="control-label label_mer">Email </label>
                        <input type="text" id="txtEmail" class="form-control form_control_mer" name="Vendor.Email" value="@Model.Vendor.Email" maxlength="40" />
                    </div>

                    <div class="form-group">
                        <label class="control-label label_mer">state</label>
                        <select id="drpState" class="form-control form_control_mer" name="Vendor.State">
                            <option value="">-Select State-</option>
                            @foreach (var item in Model.States)
                            {
                                if (Model.Vendor.State == item.State_Id)
                                {
                                    <option value="@item.State_Id" selected="selected">@item.State_Name</option>
                                }
                                else
                                {
                                    <option value="@item.State_Id">@item.State_Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="control-label label_mer">City </label>
                        <input type="text" id="txtCity" class="form-control form_control_mer" name="Vendor.City" value="@Model.Vendor.City" maxlength="15" />
                    </div>

                    <div class="form-group">
                        <label class="control-label label_mer">Pincode </label>
                        <input type="text" id="txtPincode" class="form-control form_control_mer" name="Vendor.Pincode" value="@Model.Vendor.Pincode" maxlength="6" />
                    </div>

                    <div class="form-group">
                        <label class="control-label label_mer">Contact No1 </label>
                        <input type="text" id="txtContact_No_1" class="form-control form_control_mer" name="Vendor.Contact_No_1" value="@Model.Vendor.Contact_No_1" maxlength="10" />
                    </div>

                    <div class="form-group">
                        <label class="control-label label_mer">Contact No2 </label>
                        <input type="text" id="txtContact_No_2" class="form-control form_control_mer" name="Vendor.Contact_No_2" value="@Model.Vendor.Contact_No_2" maxlength="10" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" id="btnUpdate" class="btn btn_mer ripple">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>