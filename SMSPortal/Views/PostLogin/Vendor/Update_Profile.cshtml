@model SMSPortal.Models.PostLogin.VendorViewModel
@using SMSPortalInfo.Common

<script src="~/Scripts/Module/Vendor/update_vendor_profile_events.js"></script>
<script src="~/Scripts/Module/Vendor/update_vendor_profile_methods.js"></script>
<script src="~/Scripts/Module/Vendor/vendor_profile_validation.js"></script>

<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <section class="content-header">
        <h1>
            Vendor Profile
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Profile</li>

            <li class="active">Profile Details</li>

        </ol>
    </section>
    <form id="frmUpdateVendorProfile">
        <input type="hidden" id="hdnVendor_Id" name="Vendor.Vendor_Id" value="@Model.Vendor.Vendor_Id" />
        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-body">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label style="color: #333">Name </label>
                                                    <input type="text" id="txtVendor_Name" class="form-control input-sm" name="Vendor.Vendor_Name" value="@Model.Vendor.Vendor_Name" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label style="color: #333">Address </label>
                                                    <input type="text" id="txtAddress" class="form-control input-sm" name="Vendor.Address" value="@Model.Vendor.Address" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <label style="color: #333">Email </label>
                                                    <input type="text" id="txtEmail" class="form-control input-sm" name="Vendor.Email" value="@Model.Vendor.Email" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label style="color: #333">state</label>
                                                    <select id="drpState" class="form-control" name="Vendor.State">
                                                        <option value="">-Select State-</option>
                                                        @foreach (var item in Model.States)
                                                        {
                                                            if (Model.Vendor.State == item.State_Id)
                                                            {
                                                                <option value="@item.State_Id" selected="selected">@item.State_Name</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.State_Id">@item.State_Name</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label style="color: #333">City </label>
                                                    <input type="text" id="txtCity" class="form-control input-sm" name="Vendor.City" value="@Model.Vendor.City" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label style="color: #333">Pincode </label>
                                                    <input type="text" id="txtPincode" class="form-control input-sm" name="Vendor.Pincode" value="@Model.Vendor.Pincode" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <label style="color: #333">Contact No1 </label>
                                                    <input type="text" id="txtContact_No_1" class="form-control input-sm" name="Vendor.Contact_No_1" value="@Model.Vendor.Contact_No_1" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label style="color: #333">Contact No2 </label>
                                                    <input type="text" id="txtContact_No_2" class="form-control input-sm" name="Vendor.Contact_No_2" value="@Model.Vendor.Contact_No_2" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="btn-group pull-left">
                                                <button type="button" id="btnUpdate" class="btn btn-warning btn-sm">Update</button>                                              
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>