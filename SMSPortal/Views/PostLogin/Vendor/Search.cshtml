@model SMSPortal.Models.PostLogin.VendorViewModel
@using SMSPortal.Common;

<script src="~/Scripts/Module/Vendor/search_vendor_methods.js"></script>
<script src="~/Scripts/Module/Vendor/search_vendor_events.js"></script>

<form id="frmVendor" enctype="multipart/form-data">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        @{Html.RenderPartial("_ServerMessage");}
        <section class="content-header">
            <h1>
                Vendor Master
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="#"><i class="fa fa-dashboard"></i>Admin</a></li>
                <li class="active">Vendor</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Vendor</h3>
                        </div>
                        <div class="box-body">
                            <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                            <input type="hidden" id="hdnVendor_Id" name="Vendor.Vendor_Id" value="@Model.Vendor.Vendor_Id">
                            <div class="row">
                                @*<div class="col-md-4">
                                    <div class="form-group">
                                        <label style="color: #333">Vendor Name</label>
                                        <input type="text" class="form-control input-sm" name="Filter.Vendor_Name" id="txtVendor_Name" placeholder="Enter vendor name" value="" maxlength="20">
                                    </div>
                                </div>*@
                                <div class="col-md-4">
                                    <div class="form-group auto-complete">
                                        <label for="vendor" class="lookup-title">Vendor Name</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control input-sm autocomplete-text" name="Filter.Module_Name" id="txtVendorName" placeholder="Enter Vendor Name" value="@Model.Filter.Vendor_Name" data-table="Vendors" data-col="Vendor_Id,Vendor_Name" data-headernames="Vendor">
                                            <input type="hidden" id="hdnVendor_Id" value="@Model.Filter.Vendor_Id" name="Filter.Vendor_Id" class="auto-complete-value" />
                                            <input type="hidden" id="hdnVendor_Name" value="@Model.Filter.Vendor_Name" name="Filter.Vendor_Name" class="auto-complete-label" />
                                            <div class="input-group-addon">
                                                <a href="#" class="text-muted" id="hrefVendor" role="button"><i class="fa fa-search"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="btn-group pull-left">
                                            <a class="btn btn-primary btn-sm" role="button" href="@Url.Action("Index", "Vendor")">Create </a>
                                            <a class="btn btn-warning btn-sm" id="btnSearch" role="button">Search </a>
                                        </div>

                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnEdit" style="display:none;" class="btn btn-warning btn-sm">Edit</button>
                                            @*<button type="button" id="btnAddBankDetails" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#div_Parent_Modal_Fade">Add Bank Details </button>*@
                                            <a class="btn btn-warning btn-sm" role="button" id="btnAddProductMapping" style="display:none;"> Add Product Mapping</a>

                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblVendorMaster">
                                <tr id="subhead">
                                    <th></th>
                                    <th>Vendor Name</th>
                                    <th>Address</th>
                                    <th>Status</th>
                                </tr>
                            

                            </table>
                        </div>
                        <div class="box-footer clearfix">
                                <div class="pagination pagination-sm no-margin pull-right">
                                    <ul></ul>
                                </div>
                                <div id="divSearchGridOverlay" class="overlay">
                                    <i class="fa fa-refresh fa-spin"></i>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content-wrapper -->
</form>


