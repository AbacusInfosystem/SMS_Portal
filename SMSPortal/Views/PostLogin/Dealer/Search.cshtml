@model SMSPortal.Models.PostLogin.DealerViewModel
@using SMSPortal.Common;

<script src="~/Scripts/Module/Dealer/search_dealer_events.js"></script>
<script src="~/Scripts/Module/Dealer/search_dealer_methods.js"></script>

<form id="frmDealer" enctype="multipart/form-data">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        @{Html.RenderPartial("_ServerMessage");}
        <section class="content-header">
            <h1>
                Dealer Master
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                <li><a href="#"><i class="fa fa-dashboard"></i>Admin</a></li>
                <li class="active">Dealer</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Dealer</h3>
                        </div>
                        <div class="box-body">
                            <input type="hidden" id="hdfCurrentPage" name="Pager.CurrentPage" value="@Model.Pager.CurrentPage" />
                            <input type="hidden" id="hdnDealer_Id" name="Dealer.Dealer_Id" value="@Model.Dealer.Dealer_Id">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="color: #333">Dealer Name</label>
                                        <input type="text" class="form-control input-sm" name="Filter.Dealer_Name" id="txtDealer_Name" placeholder="Enter dealer name" value="" maxlength="20">

                                    </div>
                                </div>

                            </div>

                            <div class="box-footer">
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="btn-group pull-left">
                                            <a class="btn btn-primary btn-sm" role="button" href="@Url.Action("AddEdit_Dealer", "Dealer")">Create </a>
                                            <a class="btn btn-warning btn-sm" id="btnSearch" role="button">Search</a>
                                        </div>

                                        <div class="btn-group pull-right">
                                            <button type="button" id="btnEdit" style="display:none;" class="btn btn-warning btn-sm">Edit</button>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->

            <div class="row">
                <div class="col-md-12">
                    <div class="box box-solid">
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-striped" id="tblDealerMaster">
                                <tr id="subhead">
                                    <th></th>
                                    <th>Dealer Name</th>
                                    <th>Associated Brand</th>
                                    <th>Status</th>
                                </tr>
                            </table>
                        </div>
                        <div class="box-footer clearfix">
                                <div class="pagination pagination-sm no-margin pull-right">
                                    <ul></ul>
                                </div>
                                <div id="divSearchGridOverlay" class="overlay">
                                    <i class="fa fa-refresh fa-spin"></i>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content-wrapper -->
</form>






