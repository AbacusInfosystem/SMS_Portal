@model SMSPortal.Models.PostLogin.DealerViewModel
@using SMSPortalInfo.Common

<script src="~/Scripts/Module/Dealer/dealer_profile_methods.js"></script>
<script src="~/Scripts/Module/Dealer/dealer_profile_events.js"></script>

<div class="content-wrapper">
    @{Html.RenderPartial("_ServerMessage");}
    <section class="content-header">
        <h1>
            Dealer Profile
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>

            <li class="active">Profile</li>

            <li class="active">Profile Details</li>

        </ol>
    </section>
    <form id="frmDealerProfileMaster">
        <input type="hidden" id="hdnDealer_Id" name="Dealer.Dealer_Id" value="@Model.Dealer.Dealer_Id" />
        <section class="content">
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-body">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Dealer Name :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Dealer_Name</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Brand Name :</label>
                                                    @foreach (var item in Model.Brands)
                                                    {
                                                        if (Model.Dealer.Brand_Id == item.Brand_Id)
                                                        {
                                                            <label style="font-size:12px">@item.Brand_Name</label>
                                                        }
                                                    }
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Dealer Percentage Share :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Dealer_Percentage_Share</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <label>Brand Percentage Share :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Brand_Percentage_Share</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Address :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Address</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>State :</label>
                                                    @foreach (var item in Model.States)
                                                    {
                                                        if (Model.Dealer.State == item.State_Id)
                                                        {
                                                            <label style="font-size:12px">@item.State_Name</label>
                                                        }       
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>City :</label>
                                                    <label style="font-size:12px">@Model.Dealer.City</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Pincode :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Pincode</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <label>Contact No1 :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Contact_No_1</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Contact No2 :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Contact_No_2</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label>Email :</label>
                                                    <label style="font-size:12px">@Model.Dealer.Email</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                
                                </div>
                                <div class="box-footer">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="btn-group pull-left">
                                                <button type="button" id="btnEdit" class="btn btn-warning btn-sm">Edit</button>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>